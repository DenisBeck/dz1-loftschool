mixin list(className, array)
	ul(class="#{className}__list")
		each object, index in array
			- var empty = ""
			if (index == 0)
				li(class="#{className}__item #{className}__item_first")
					a(href="#{object.href}" class="#{className}__link #{ object.item || empty}")= object.text
			else
				li(class="#{className}__item" ) 
					a(href="#{object.href}" class="#{className}__link #{ object.item || empty}")= object.text

mixin myWork-description
	ul.description-part__list
		each work, index in works
			if index == 0
				li.description-part__item.description-part__item_active
					h3.description-part__head #{work.header}
					.description-part-tech
						ul.description-part-tech__list
							each val, index in work.description
								- var comma = ","
								if (index == work.description.length - 1)
									- var comma = ""
								li.description-part-tech__item #{val}#{comma}
					a.description-part__visit(href="#{work.href}" target="_blank") Посмотреть сайт
			else
				li.description-part__item
					h3.description-part__head #{work.header}
					.description-part-tech
						ul.description-part-tech__list
							each val, index in work.description
								- var comma = ","
								if (index == work.description.length - 1)
									- var comma = ""
								li.description-part-tech__item #{val}#{comma}
					a.description-part__visit(href="#{work.href}" target="_blank") Посмотреть сайт
			

